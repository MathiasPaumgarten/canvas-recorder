  },
  "devDependencies": {
    "@types/expect.js": "^0.3.29",
    "@types/file-saver": "^1.3.0",
    "@types/jszip": "^3.1.3",
    "@types/lodash": "^4.14.106",
    "@types/mocha": "^5.0.0",
    "browserify": "^16.1.1",
    "expect.js": "^0.3.1",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-expect": "^1.1.3",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "mocha": "^5.0.5",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
